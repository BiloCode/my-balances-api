generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  record ProductRecord?
  entity ProductEntity @relation(fields: [entity_id], references: [id])
  entity_id String @db.ObjectId
  title String
  description String?
  tags String[] @default([])
  images String[] @default([])
  buy_date DateTime
  buy_price Float
  buy_quotas Int
  buy_quotas_price Float
  @@map("product")
}

model ProductEntity {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  products Product[]
  name String
  long_name String?
  short_name String?
  @@map("product_entity")
}

model ProductRecord {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  product Product @relation(fields: [product_id], references: [id])
  product_id String @db.ObjectId @unique
  payments ProductRecordPayment[]
  @@map("product_record")
}

type ProductRecordPayment {
  paid_date DateTime
  paid_month String
}

model Job {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  type JobType
  status JobStatus
  payload Json
  createdAt DateTime @default(now())
  @@map("job")
}

enum JobType {
  Product
}

enum JobStatus {
  Pending
  Processing
  Done
  Failed
}
